{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "development",
            "request": "launch",
            "type": "dart",
            "args": [
                "--web-renderer",
                "canvaskit",
                "--web-browser-flag",
                "--disable-web-security"
            ],
            "toolArgs": [
                "--dart-define",
                "ENV=development",
                "--dart-define",
                "API_BASE_URL=api.themoviedb.org",
                "--dart-define-from-file",
                ".env-development"
            ],
        },
        {
            "name": "staging",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "toolArgs": [
                "--dart-define",
                "ENV=staging",
                "--dart-define",
                "API_BASE_URL=api.themoviedb.org",
                "--dart-define-from-file",
                ".env-staging"
            ]
        },
        {
            "name": "production",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "toolArgs": [
                "--dart-define",
                "ENV=production",
                "--dart-define",
                "API_BASE_URL=api.themoviedb.org",
                "--dart-define-from-file",
                ".env"
            ]
        }
    ]
}